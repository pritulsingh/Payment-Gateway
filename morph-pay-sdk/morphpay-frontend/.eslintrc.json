{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "no-unused-vars": ["warn", { 
      "vars": "all", 
      "args": "after-used", 
      "ignoreRestSiblings": false,
      "varsIgnorePattern": "^(React|_)$",
      "argsIgnorePattern": "^_"
    }],
    "no-console": "off",
    "prefer-const": "error",
    "no-var": "error"
  }
}
